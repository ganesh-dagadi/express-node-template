          <li class="nav-item">
            <a class="nav-link" href="/login" >Log in</a>
          </li>
          <li class="nav-item">
              <a class="nav-link" href="/signup" >Sign up</a>
          </li>
        <% }else{ %>
          <li class="nav-item">
            <a class = "nav-link" href = "#"><%= user.name%></a>
          </li>
